    "bcrypt": "^5.0.1",
    "faker": "^6.6.6",
    "graphql": "^16.3.0",
    "inversify": "^6.0.1",
    "jest": "^27.4.5",
    "module-alias": "^2.2.2",
    "mysql2": "^2.2.5",
